<form action="/tasks/<%= @task.id %>" method="post">
  <!-- default method for a form is post -->
  <p>Edit</p>
  <input type="hidden" name="_method" value="PUT" />
  <!--  overrides method to be a PUT request -->
  <!--  set :method_override, true is controller allows us to do this -->
  <input type="text" name="task[title]" value="<%= @task.title %>"/><br/>
  <input type="text" name="task[description]" value="<%= @task.description %>"/><br/>
  <input type="submit"/>
</form>
